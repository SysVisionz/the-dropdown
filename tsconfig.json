{
	"compilerOptions": {
	  "target": "ES2017",
	  "lib": ["dom", "dom.iterable", "esnext"],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": true,
	  "noEmit": true,
	  "esModuleInterop": true,
	  "module": "ES2022",
	  "moduleResolution": "bundler",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "jsx": "preserve",
	  "incremental": true,
	},
	"include": ["src/**/*.tsx", "src/**/*.ts", "src/index-deprecated.js"],
	"exclude": ["node_modules"]
}